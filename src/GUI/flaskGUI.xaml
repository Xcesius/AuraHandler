        <CheckBox x:Name="Flask3" Content="Flask 3" HorizontalAlignment="Left" Margin="163,21,0,0" VerticalAlignment="Top" Checked="Flask3_Checked" Unchecked="Flask3_Unchecked"/>
        <CheckBox x:Name="Flask4" Content="Flask 4" HorizontalAlignment="Left" Margin="235,21,0,0" VerticalAlignment="Top" Checked="Flask4_Checked" Unchecked="Flask4_Unchecked"/>
        <CheckBox x:Name="Flask5" Content="Flask 5" HorizontalAlignment="Left" Margin="310,21,0,0" VerticalAlignment="Top" Checked="Flask5_Checked" Unchecked="Flask5_Unchecked"/>
        <Button x:Name="SaveButton" Content="Save" HorizontalAlignment="Left" Margin="414,18,0,0" VerticalAlignment="Top" Width="75" Click="SaveButton_Click"/>

    </Grid>
</Window>
